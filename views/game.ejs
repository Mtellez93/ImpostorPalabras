<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mando - Impostor de Palabra</title>
    <link rel="stylesheet" href="/style.css">
    <script src="/socket.io/socket.io.js"></script>
</head>
<body>
    <div id="game-container">
        <div id="join-view">
            <h2>UNIRSE</h2>
            <input type="text" id="roomCode" placeholder="CÓDIGO SALA">
            <input type="text" id="playerName" placeholder="TU NOMBRE">
            <button onclick="join()" class="btn-join">ENTRAR</button>
        </div>

        <div id="player-view" style="display: none;">
            <div id="role-card" class="card">
                <h2 id="word-display">Esperando al host...</h2>
            </div>
            <div id="voting-area" style="display: none; margin-top: 20px;">
                <h3>¿Quién es el impostor?</h3>
                <div id="candidates"></div>
            </div>
        </div>
    </div>

    <script>
        const socket = io();
        let myRoom = "";

        function join() {
            myRoom = document.getElementById('roomCode').value.toUpperCase();
            const name = document.getElementById('playerName').value;
            if(myRoom && name) socket.emit('joinRoom', { code: myRoom, name });
        }

        socket.on('joined', () => {
            document.getElementById('join-view').style.display = 'none';
            document.getElementById('player-view').style.display = 'block';
        });

        socket.on('receiveRole', (data) => {
            document.getElementById('word-display').innerText = data.msg;
            if(data.role === 'impostor') document.getElementById('role-card').classList.add('impostor-theme');
        });

        socket.on('votingStarted', (players) => {
            document.getElementById('voting-area').style.display = 'block';
            const area = document.getElementById('candidates');
            area.innerHTML = "";
            players.forEach(p => {
                const btn = document.createElement('button');
                btn.innerText = p.name;
                btn.onclick = () => {
                    socket.emit('castVote', { code: myRoom, targetId: p.id });
                    area.innerHTML = "<h4>Voto registrado. Mira la TV...</h4>";
                };
                area.appendChild(btn);
            });
        });

        socket.on('votingResult', (data) => {
            document.getElementById('voting-area').style.display = 'none';
            document.getElementById('word-display').innerText = "Ronda terminada.";
        });

        socket.on('errorMsg', (msg) => alert(msg));
    </script>
</body>
</html>
