<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Impostor de Palabra</title>
    <link rel="stylesheet" href="/style.css">
    <script src="/socket.io/socket.io.js"></script>
</head>
<body>
    <div id="game-container">
        <h1>üïµÔ∏è‚Äç‚ôÇÔ∏è Impostor de Palabra</h1>

        <div id="start-menu">
            <button onclick="beHost()" class="btn-main">CREAR SALA (HOST)</button>
            <hr>
            <button onclick="showJoinForm()" class="btn-main">UNIRSE A JUEGO</button>
        </div>

        <div id="join-form" style="display: none;">
            <input type="text" id="roomCode" placeholder="C√ìDIGO (4 letras)" maxlength="4">
            <input type="text" id="playerName" placeholder="TU NOMBRE">
            <button onclick="bePlayer()" class="btn-join">ENTRAR</button>
            <button onclick="location.reload()" class="btn-back">VOLVER</button>
        </div>

        <div id="host-lobby" style="display: none;">
            <h2>C√ìDIGO DE SALA: <span id="display-code" class="highlight">----</span></h2>
            <h3>Jugadores en la sala:</h3>
            <ul id="player-list"></ul>
            <button id="start-btn" onclick="startGame()" style="display: none;" class="btn-start">EMPEZAR JUEGO</button>
            <button id="vote-btn" onclick="startVoting()" style="display: none;" class="btn-vote">VOTAR (ESTILO AMONG US)</button>
        </div>

        <div id="player-game" style="display: none;">
            <div id="role-card" class="card">
                <p>Tu palabra es:</p>
                <h2 id="word-display">...</h2>
            </div>
            <div id="voting-area" style="display: none;">
                <h3>¬øQui√©n es el impostor?</h3>
                <div id="candidates"></div>
            </div>
        </div>
    </div>

    <script>
        const socket = io();
        let currentRoom = "";

        // --- FUNCIONES DEL HOST ---
        function beHost() {
            document.getElementById('start-menu').style.display = 'none';
            document.getElementById('host-lobby').style.display = 'block';
            socket.emit('createRoom');
        }

        socket.on('roomCreated', (code) => {
            currentRoom = code;
            document.getElementById('display-code').innerText = code;
        });

        socket.on('updatePlayers', (players) => {
            const list = document.getElementById('player-list');
            list.innerHTML = "";
            players.forEach(p => {
                const li = document.createElement('li');
                li.innerText = p.name;
                list.appendChild(li);
            });
            // Mostrar bot√≥n empezar si hay al menos 3 jugadores
            if (players.length >= 3) {
                document.getElementById('start-btn').style.display = 'block';
            }
        });

        function startGame() {
            socket.emit('startGame', currentRoom);
            document.getElementById('start-btn').style.display = 'none';
            document.getElementById('vote-btn').style.display = 'block';
        }

        function startVoting() {
            socket.emit('startVote', currentRoom);
        }

        // --- FUNCIONES DEL JUGADOR ---
        function showJoinForm() {
            document.getElementById('start-menu').style.display = 'none';
            document.getElementById('join-form').style.display = 'block';
        }

        function bePlayer() {
            const code = document.getElementById('roomCode').value.toUpperCase();
            const name = document.getElementById('playerName').value;
            if(code && name) {
                currentRoom = code;
                socket.emit('joinRoom', { code, name });
            }
        }

        socket.on('joined', () => {
            document.getElementById('join-form').style.display = 'none';
            document.getElementById('player-game').style.display = 'block';
            document.getElementById('word-display').innerText = "Esperando a que el host inicie...";
        });

        socket.on('receiveRole', (data) => {
            document.getElementById('word-display').innerText = data.msg;
            if(data.role === 'impostor') {
                document.getElementById('role-card').classList.add('impostor-theme');
            }
        });

        socket.on('votingStarted', (players) => {
            document.getElementById('voting-area').style.display = 'block';
            const area = document.getElementById('candidates');
            area.innerHTML = "";
            players.forEach(p => {
                const btn = document.createElement('button');
                btn.innerText = p.name;
                btn.onclick = () => {
                    socket.emit('castVote', { code: currentRoom, targetId: p.id });
                    area.innerHTML = "<h4>Voto enviado...</h4>";
                };
                area.appendChild(btn);
            });
        });

        socket.on('errorMsg', (msg) => alert(msg));
    </script>
</body>
</html>
