<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Impostor de Palabra</title>
    <link rel="stylesheet" href="/style.css">
    <script src="/socket.io/socket.io.js"></script>
</head>
<body>
    <div id="game-container">
        <h1>üïµÔ∏è‚Äç‚ôÇÔ∏è Impostor de Palabra</h1>

        <div id="start-menu">
            <button onclick="beHost()" class="btn-main">HOST (Pantalla TV)</button>
            <button onclick="showJoinForm()" class="btn-join">JOIN (Celular)</button>
        </div>

        <div id="join-form" style="display: none;">
            <input type="text" id="roomCode" placeholder="C√ìDIGO SALA">
            <input type="text" id="playerName" placeholder="TU NOMBRE">
            <button onclick="bePlayer()" class="btn-join">ENTRAR</button>
            <button onclick="location.reload()" class="btn-back">VOLVER</button>
        </div>

        <div id="host-lobby" style="display: none;">
            <p>C√≥digo para unirse:</p>
            <h2 id="display-code" class="highlight">----</h2>
            <ul id="player-list"></ul>
            <button id="start-btn" onclick="startGame()" style="display: none;" class="btn-start">EMPEZAR</button>
            <button id="vote-btn" onclick="startVoting()" style="display: none;" class="btn-vote">INICIAR VOTACI√ìN</button>
        </div>

        <div id="player-game" style="display: none;">
            <div id="role-card" class="card">
                <h2 id="word-display">Esperando inicio...</h2>
            </div>
            <div id="voting-area" style="display: none; margin-top: 20px;">
                <h3>¬øQui√©n es el impostor?</h3>
                <div id="candidates"></div>
            </div>
        </div>
    </div>

    <script>
        const socket = io();
        let currentRoom = "";

        function beHost() {
            document.getElementById('start-menu').style.display = 'none';
            document.getElementById('host-lobby').style.display = 'block';
            socket.emit('createRoom');
        }

        socket.on('roomCreated', (code) => {
            currentRoom = code;
            document.getElementById('display-code').innerText = code;
        });

        socket.on('updatePlayers', (players) => {
            const list = document.getElementById('player-list');
            list.innerHTML = players.map(p => `<li>${p.name}</li>`).join('');
            if (players.length >= 3) document.getElementById('start-btn').style.display = 'block';
        });

        function startGame() {
            socket.emit('startGame', currentRoom);
            document.getElementById('start-btn').style.display = 'none';
        }

        socket.on('gameStarted', () => {
            if (document.getElementById('host-lobby').style.display === 'block') {
                document.getElementById('vote-btn').style.display = 'block';
            }
        });

        function showJoinForm() {
            document.getElementById('start-menu').style.display = 'none';
            document.getElementById('join-form').style.display = 'block';
        }

        function bePlayer() {
            const code = document.getElementById('roomCode').value.toUpperCase();
            const name = document.getElementById('playerName').value;
            if(code && name) {
                currentRoom = code;
                socket.emit('joinRoom', { code, name });
            }
        }

        socket.on('joined', () => {
            document.getElementById('join-form').style.display = 'none';
            document.getElementById('player-game').style.display = 'block';
        });

        socket.on('receiveRole', (data) => {
            document.getElementById('word-display').innerText = data.msg;
            if(data.role === 'impostor') document.getElementById('role-card').classList.add('impostor-theme');
        });

        function startVoting() { socket.emit('startVote', currentRoom); }

        socket.on('votingStarted', (players) => {
            document.getElementById('voting-area').style.display = 'block';
            const area = document.getElementById('candidates');
            area.innerHTML = "";
            players.forEach(p => {
                const btn = document.createElement('button');
                btn.innerText = p.name;
                btn.onclick = () => {
                    socket.emit('castVote', { code: currentRoom, targetId: p.id });
                    area.innerHTML = "Voto enviado...";
                };
                area.appendChild(btn);
            });
        });

        socket.on('votingResult', (data) => {
            document.getElementById('voting-area').style.display = 'none';
            document.getElementById('word-display').innerHTML = `<h3>${data.msg}</h3>`;
            if (data.gameOver) {
                const btn = document.createElement('button');
                btn.innerText = "REINICIAR";
                btn.onclick = () => location.reload();
                btn.className = "btn-main";
                document.getElementById('game-container').appendChild(btn);
            }
        });

        socket.on('errorMsg', (msg) => alert(msg));
    </script>
</body>
</html>
